{
  "builders": [
    {
      "type": "vsphere-iso",
      "vcenter_server": "{{user `vcenter_server`}}",
      "username": "{{user `vcenter_username`}}",
      "password": "{{user `vcenter_password`}}",
      "insecure_connection": "true",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "cluster": "{{user `vcenter_cluster`}}",
      "host": "{{user `vcenter_host`}}",
      "folder": "{{user `vcenter_folder`}}",
      "datastore": "{{user `vcenter_datastore`}}",
      "network": "{{user `vcenter_network`}}",
      "vm_name": "TEMPLATE_UBUNTU18",
      "notes": "Ubuntu 18 Template created with Packer",

      "guest_os_type": "ubuntu64Guest",

      "CPUs": 2,
      "cpu_cores": 2,
      "RAM": 2048,
      "RAM_reserve_all": false,

      "disk_size": 32768,
      "boot_order": "disk,cdrom",
      "disk_controller_type": "pvscsi",
      "disk_thin_provisioned": true,

      "network_card": "vmxnet3",
  
      "iso_paths": [
        "{{user `iso_path`}}/ubuntu-18.04.3-server-amd64.iso"
      ],
      "http_ip": "{{user `local_ip`}}",
      "http_port_min": 8000,
      "http_port_max": 8000,
      "http_directory": "{{template_dir}}/http/ubuntu",

      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait><f6><wait><esc><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz",
        " initrd=/install/initrd.gz",
        " priority=critical",
        " locale=en_US",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        "<enter>"
      ],

      "communicator": "ssh",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "create_snapshot": "true",
      "convert_to_template": "true"
    }
  ],
  
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir ~/.ssh",
        "chmod 740 ~/.ssh",
        "echo 'ssh-rsa ' >> ~/.ssh/authorized_keys",
        "echo 'ssh-rsa ' >> ~/.ssh/authorized_keys",
        "echo 'ssh-rsa ' >> ~/.ssh/authorized_keys",
        "chmod 640 ~/.ssh/authorized_keys",
        "echo 'template build complete'"
      ]
    }
  ]

}
