{
  "builders": [
    {
      "type": "vsphere-iso",
      "vcenter_server": "{{user `vcenter_server`}}",
      "username": "{{user `vcenter_username`}}",
      "password": "{{user `vcenter_password`}}",
      "insecure_connection": "true",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "cluster": "{{user `vcenter_cluster`}}",
      "host": "{{user `vcenter_host`}}",
      "folder": "{{user `vcenter_folder`}}",
      "datastore": "{{user `vcenter_datastore`}}",
      "network_adapters": [
        {
          "network": "{{user `vcenter_network`}}",
          "network_card": "vmxnet3"
        }
      ],
      "vm_name": "TEMPLATE_DEBIAN10",
      "notes": "Debian 10 Template created with Packer",

      "guest_os_type": "debian10_64Guest",

      "CPUs": 2,
      "cpu_cores": 2,
      "RAM": 2048,
      "RAM_reserve_all": false,

      "storage": [
        {
          "disk_size": 16384,
          "disk_thin_provisioned": true
        }
      ],
      "boot_order": "disk,cdrom",
      "disk_controller_type": "pvscsi",

      "configuration_parameters": {
        "guestinfo.metadata.encoding": "base64",
        "guestinfo.metadata": "bmV0d29yazoge2NvbmZpZzogZGlzYWJsZWR9Cg=="
      },

      "iso_paths": [
        "{{user `iso_path`}}"
      ],
      "http_ip": "{{user `local_websrv_ip`}}",
      "http_port_min": 8000,
      "http_port_max": 8009,
      "http_directory": "{{template_dir}}/http",

      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "install",
        " auto",
        " netcfg/get_hostname=DEBIAN10",
        " netcfg/get_domain=littleglitch.com",
        " fb=false",
        " debian-installer=en_US.UTF-8",
        " locale=en_US.UTF-8",
        " kbd-chooser/method=us",
        " keyboard-configuration/xkb-keymap=us",
        " console-keymaps-at/keymap=us",
        " console-setup/ask_detect=false",
        " debconf/frontend=noninteractive",
        " grub-installer/bootdev=/dev/sda",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        "<enter>"
      ],

      "communicator": "ssh",
      "ssh_timeout": "30m",
      "ssh_handshake_attempts": 10,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "create_snapshot": "false",
      "convert_to_template": "true"
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "files/interfaces",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": [
        "mkdir ~/.ssh",
        "chmod 740 ~/.ssh",
        "echo '{{user `ssh_key`}}' >> ~/.ssh/authorized_keys",
        "chmod 640 ~/.ssh/authorized_keys",
        "curl -sSL https://raw.githubusercontent.com/vmware/cloud-init-vmware-guestinfo/master/install.sh | sudo sh",
        "sudo cloud-init clean",
        "sudo rm -f /var/log/cloud-init*",
        "sudo mv /tmp/interfaces /etc/network/",
        "sudo chown root: /etc/network/interfaces",
        "sudo chmod 644 /etc/network/interfaces",
        "echo 'template build complete'"
      ]
    }
  ]

}
