{
  "builders": [
    {
      "type": "vsphere-iso",
      "vcenter_server": "{{user `vcenter_server`}}",
      "username": "{{user `vcenter_username`}}",
      "password": "{{user `vcenter_password`}}",
      "insecure_connection": "true",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "cluster": "{{user `vcenter_cluster`}}",
      "host": "{{user `vcenter_host`}}",
      "folder": "{{user `vcenter_folder`}}",
      "datastore": "{{user `vcenter_datastore`}}",
      "network": "{{user `vcenter_network`}}",
      "vm_name": "TEMPLATE_CENTOS8",
      "notes": "CentOS 8 Template created with Packer",

      "guest_os_type": "centos8_64Guest",

      "CPUs": 2,
      "cpu_cores": 2,
      "RAM": 2048,
      "RAM_reserve_all": false,

      "disk_size": 32768,
      "boot_order": "disk,cdrom",
      "disk_controller_type": "pvscsi",
      "disk_thin_provisioned": true,

      "network_card": "vmxnet3",

      "iso_paths": [
        "{{user `iso_path`}}/{{user `iso_file_centos`}}"
      ],
      "http_ip": "{{user `local_ip`}}",
      "http_port_min": 8000,
      "http_port_max": 8000,
      "http_directory": "{{template_dir}}/http/centos",
      
      "boot_wait": "5s",
      "boot_command":[
        "<up><wait><tab> ",
        "inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg",
        "<tab><enter>"
      ],

      "communicator": "ssh",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "create_snapshot": "false",
      "convert_to_template": "true"
    }
  ],
  
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir ~/.ssh",
        "chmod 740 ~/.ssh",
        "echo '{{user `ssh_key`}}' >> ~/.ssh/authorized_keys",
        "chmod 640 ~/.ssh/authorized_keys",
        "sudo yum install cloud-init -y -q",
        "sudo sed -i 's/^disable_root.*/disable_root: 0/; s/^ssh_pwauth.*/ssh_pwauth: 1/' /etc/cloud/cloud.cfg",
        "sudo curl -sSL https://raw.githubusercontent.com/vmware/cloud-init-vmware-guestinfo/master/install.sh | sudo sh -",
        "echo 'template build complete'"
      ]
    }
  ]

}
