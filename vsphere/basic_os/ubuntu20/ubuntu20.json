{
  "builders": [
    {
      "type": "vsphere-iso",
      "vcenter_server": "{{user `vcenter_server`}}",
      "username": "{{user `vcenter_username`}}",
      "password": "{{user `vcenter_password`}}",
      "insecure_connection": "true",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "cluster": "{{user `vcenter_cluster`}}",
      "host": "{{user `vcenter_host`}}",
      "folder": "{{user `vcenter_folder`}}",
      "datastore": "{{user `vcenter_datastore`}}",
      "network_adapters": [
        {
          "network": "{{user `vcenter_network`}}",
          "network_card": "vmxnet3"
        }
      ],
      "vm_name": "TEMPLATE_UBUNTU20",
      "notes": "Ubuntu 20.04 Template created with Packer",

      "guest_os_type": "ubuntu64Guest",

      "CPUs": 2,
      "cpu_cores": 2,
      "RAM": 2048,
      "RAM_reserve_all": false,

      "storage": [
        {
          "disk_size": 32768,
          "disk_thin_provisioned": true
        }
      ],
      "boot_order": "disk,cdrom",
      "disk_controller_type": "pvscsi",

      "iso_paths": [
        "{{user `iso_path`}}"
      ],
      "http_ip": "{{user `local_websrv_ip`}}",
      "http_port_min": 8000,
      "http_port_max": 8009,
      "http_directory": "{{template_dir}}/http",

      "boot_wait": "5s",
      "boot_command": [
        "<enter><enter><f6><esc><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "initrd=/casper/initrd autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
        "<enter>"
      ],

      "communicator": "ssh",
      "ssh_timeout": "30m",
      "ssh_handshake_attempts": 10,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "create_snapshot": "false",
      "convert_to_template": "true"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "curl -sSL 'https://raw.githubusercontent.com/vmware/cloud-init-vmware-guestinfo/master/install.sh' | sudo sh -",
        "sudo mv /etc/cloud/cloud.cfg.d/99-installer.cfg /etc/cloud/cloud.cfg.d/99-installer.cfg.disabled",
        "sudo mv /etc/cloud/cloud.cfg.d/subiquity-disable-cloudinit-networking.cfg /etc/cloud/cloud.cfg.d/subiquity-disable-cloudinit-networking.cfg.disbled",
        "sudo cloud-init clean",
        "echo 'template build complete'"
      ]
    }
  ]

}
